extends dcLayout

block style
    link(rel="stylesheet", href="/stylesheets/Doctor/dcMakePrescription.css")

block content
    if err 
        h3=err
        -patientId = 'nothing';
    if patientId == 'nothing'
        form(action="/doctor/searchPatient", method="post",class="f1") 
            label(for="srch") Enter Username of that Patient for whom you want to make Prescription
            input(type="search", id="srch", name="username",placeholder="Enter Username", style="margin-left:39%")
            button.btn.btn-primary
                i.fas.fa-search  Search 

    else
        //- h2 #{username} #{doctorId}
        //- h3 #{patientUsername}  #{patientId}
        -var makePrescription =  '/doctor/makePrescription/' + doctor._id + '/' + patient._id + '/' + patient.username + '/' + appointmentId;
        .container
            h3 Make Prescription for #{patient.firstname} #{patient.lastname}
            form(action=makePrescription, method="post",class="f2") 
                h4 Enter Disease of Patient
                input(type="text",name="disease")
                h4 Enter Full Prescription of Patient 
                input(type="hidden", name="")
                textarea(name="prescription", cols="80", rows="20") 
                button.btn.btn-light.btn-lg.download-button
                    i.fas.fa-file-prescription
                        |  Make Prescription